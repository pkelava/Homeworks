    constructor Tetronimo new (Array gameField, int gameSpeed,int activeTetronimo) {
        let ActiveTetronimo = activeTetronimo;

        if(ActiveTetronimo = 1){
            let teti = TetronimoI.new(gameField, gameSpeed);
        }
        if(ActiveTetronimo = 2){
            let tets = TetronimoS.new(gameField,gameSpeed);
        }
        if(ActiveTetronimo = 3){
