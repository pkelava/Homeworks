        }
        if(ActiveTetronimo = 6){
            let tett = TetronimoT.new(gameField,gameSpeed);
        }
        if(ActiveTetronimo = 7){
            let teto = TetronimoO.new(gameField,gameSpeed);
        }
        return this;
    }

